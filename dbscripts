CREATE TABLE Users (
   id BIGINT PRIMARY KEY NOT NULL,
   name TEXT NOT NULL,
   screen_name TEXT,
   created_at DATE,
   location TEXT
);

CREATE TABLE Tweets(
   id BIGINT PRIMARY KEY NOT NULL,
   user_id BIGINT REFERENCES Users(id),
   text TEXT,
   lang VARCHAR(2),
   created_at DATE,
   category TEXT,
   verified BOOLEAN
);

CREATE TABLE Categories(
   id INT PRIMARY KEY NOT NULL,
   name TEXT
);

